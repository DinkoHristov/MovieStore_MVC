@model Genre;

<form class="w-40" asp-controller="Genre" asp-action="Update" method="post">
    <h2 class="pb-10">Edit Genre</h2>
    <input type="hidden" class="input" asp-for="Id">

    <div class="input-container">
        <label asp-for="Name" class="w-40">Genre Name</label>
        <input type="text" asp-for="Name" class="input">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"></span>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert mb-1">
            @TempData["Message"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Update</button>
        <a class="btn btn-sec" asp-controller="Genre" asp-action="GenreList">All genres</a>
    </div>
</form>