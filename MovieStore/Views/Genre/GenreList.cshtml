@model List<Genre>;

<div class="tbl-container">
    <h2>Genres</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-controller="Genre" asp-action="Update" asp-route-id="@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a asp-controller="Genre" asp-action="Delete" asp-route-id="@item.Id" onclick="return window.confirm('Are you sure you want to delete this Genre?')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </table>
    <div class="input-container">
        <a asp-controller="Genre" asp-action="Add" class="btn btn-sec">Back</a>
    </div>
</div>