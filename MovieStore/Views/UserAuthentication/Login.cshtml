@model LoginModel;

<form class="w-40" asp-controller="UserAuthentication" asp-action="Login" method="post">
    <h2 class="pb-10">Login</h2>
    <div class="input-container">
        <label asp-for="Username" class="w-40">Username</label>
        <input type="text" asp-for="Username" class="input">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"></span>
    </div>

    <div class="input-container">
        <label asp-for="Password" class="w-40">Password</label>
        <input type="password" asp-for="Password" class="input">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert mb-1">
            @TempData["Message"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Login</button>
        <button class="btn btn-default" asp-controller="UserAuthentication" asp-action="Register" type="submit">Register</button>
    </div>
</form>