@model List<MovieModel>;


<div class="tbl-container">
    <h2>Movies</h2>

    <table>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>ReleasedYear</th>
            <th>Image</th>
            <th>Director</th>
            <th>Cast</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@string.Join(", ", item.GenreList.Select(x => x.Text))</td>
                <td>@item.ReleasedYear.ToString("dd-MM-yyyy")</td>
                <td><img style="height: 60px; width: 80px" src="@item.MovieImage" /></td>
                <td>@item.Director</td>
                <td>@item.Cast</td>
                <td>
                    <a asp-controller="Movie" asp-action="Update" asp-route-id="@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@item.Id" onclick="return window.confirm('Are you sure you want to delete this Movie?')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </table>
    <div class="input-container">
        <a asp-controller="Movie" asp-action="Add" class="btn btn-sec">Back</a>
    </div>
</div>